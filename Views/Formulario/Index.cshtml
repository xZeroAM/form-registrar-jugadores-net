@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2>Formulario de Jugador de Futbol</h2>
    <form asp-controller="Formulario" asp-action="Formulario" method="post">
        <label for="nombre">Nombre:</label><br /><input type="edad" id="nombre" name="nombre"><br />
        <label for="edad">Edad:</label><br /><input type="edad" id="edad" name="edad"><br />
        <fieldset>
            <label>Genero:</label><br />
            <label>
                <input type="radio" name="genero" value="Masculino"> Masculino
            </label>
            <br>
            <label>
                <input type="radio" name="genero" value="Femenino"> Femenino
            </label>
        </fieldset>
        <label for="Equipo">Equipo:</label><br />
        <select name="equipo" id="curso">
            <option value="Universitario" selected>Universitario</option>
            <option value="Alianza Lima">Alianza Lima</option>
            <option value="S. Cristal">S. Cristal</option>
            <option value="Cienciano">Cienciano</option>
            <option value="Fbc Melgar">Fbc Melgar</option>
        </select>
            <br>
        <label for="Categoria">Categoria:</label><br />
        <select name="categoria" id="Categoria">
            <option value="Universitario" selected>Sub-15</option>
            <option value="Alianza Lima">Sub-17</option>
            <option value="S. Cristal">Sub-20</option>
            <option value="Cienciano">Sub-23</option>
        </select>
            <br>
        <label for="numero_meses">Número de meses a inscribirse:</label><br />
        <select name="num_meses" id="numero_meses">
            <option value="6" selected>6 meses</option>
            <option value="12">12 meses</option>
            <option value="18">18 meses</option>
            <option value="24">24 meses</option>
        </select>
            <br>
        <label for="numero_meses">Número de temporadas:</label><br />
        <select name="num_temporadas" id="numero_temporadas">
            <option value="1" selected>1 Temporada</option>
            <option value="2">2 Temporada</option>
            <option value="3">3 Temporada</option>
            <option value="4">4 Temporada</option>
        </select>

        <br><br>
        <input type="submit" value="Enviar">
        <p style="color: rgb(110, 110, 110); font-size: 13px; margin-top: 5px">1 Temporada = 300 Soles</p>
    </form>
    <br>
    <h4>@ViewData["Resultado"]</h4>
</div>
